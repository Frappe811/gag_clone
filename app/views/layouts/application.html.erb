<!DOCTYPE html>
<html>
  <head>
    <title>GagClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <ul class="navbar">
        <li class="home">
          <%=link_to image_tag("logo.png", :class => "logo" ), root_path %>

        </li>
        <li class="function">
          <ul>
            <% if user_signed_in? %>
              <li class="logout">
                <%= button_to "Log out", destroy_user_session_path, :class => "btn-mute", :method => :delete %>
              <li>
              <li class="upload">
                <%= button_to "+ Upload", root_path, :class => "btn btn-primary" %>
              </li>
            <% else %>
              <li class="login">
                <%= button_to "Log in", new_user_session_path, :class => "btn-mute", :method => :get %>
                <!-- <button name="button" type="submit" class="btn btn-mute">Login</button></li> -->
              <li>
                <!-- <button name="button" type="submit" class="btn btn-primary">Sign up</button> -->
                <%= button_to "Sign up", new_user_registration_path, :class => "btn btn-primary", :method => :get %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>

    <%= yield %>
  </body>
</html>
